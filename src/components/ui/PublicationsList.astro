// Utility to join authors with commas, highlighting the last one with "and"
function formatAuthors(authors: string[]) {
  if (authors.length === 1) return authors[0]
  return authors.slice(0, -1).join(", ") + " and " + authors[authors.length - 1]
}

// Badge style for Submitted/Forthcoming
const badgeClasses = "inline-block px-2 py-0.5 text-xs font-semibold rounded-full text-white bg-indigo-600 ml-2"

---

<ul class="space-y-10">
  {publications.map((pub) => (
    <li>
      <a
        href={pub.link ?? "#"}
        target={pub.link ? "_blank" : undefined}
        rel={pub.link ? "noopener noreferrer" : undefined}
        class="hover:text-indigo-700 transition-colors duration-200 font-semibold text-lg"
      >
        {pub.title}
      </a>
      {pub.year === "Submitted" && <span class={badgeClasses}>Submitted</span>}
      {pub.year === "Forthcoming" && <span class={badgeClasses}>Forthcoming</span>}
      <p class="mt-1 text-sm text-gray-700 dark:text-gray-300">
        <strong>Authors:</strong> {formatAuthors(pub.authors)}
      </p>
      <p class="text-sm italic text-gray-600 dark:text-gray-400">{pub.journal}</p>
      {typeof pub.year === "number" && (
        <p class="text-xs text-gray-500 mt-0.5">Year: {pub.year}</p>
      )}
    </li>
  ))}
</ul>
